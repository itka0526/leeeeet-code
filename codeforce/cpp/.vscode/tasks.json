{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Custom Task",
            "command": "/opt/homebrew/bin/g++-13",
            "args": ["-ld_classic", "-fdiagnostics-color=always", "-g", "${file}", "-o", "${fileBasenameNoExtension}"],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
